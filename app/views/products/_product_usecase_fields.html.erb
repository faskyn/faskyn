<div class="nested-fields">
  <div class="field">
    <div class= "row">
      <div class="col-md-3">
        <div class = "form-group">
          <%= f.text_field :example, placeholder: "add a usecase", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class = "form-group">
          <%= f.text_area :detail, placeholder: "add details", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-3">
        <%= link_to_remove_association "remove usecase", f %>
      </div>
    </div>
  </div>
</div>