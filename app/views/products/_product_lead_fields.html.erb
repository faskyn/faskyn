<div class="nested-fields">
  <div class="field">
    <div class= "row">
      <div class="col-md-4">
        <div class = "form-group">
          <%= f.text_field :lead, placeholder: "add a potential lead", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class = "form-group">
          <%= f.text_area :pitch, placeholder: "how the lead would use the product ", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <%= link_to_remove_association "Remove lead", f %>
      </div>
    </div>
  </div>
</div>