<% provide(:title, @product.name + " lead") %>

<div class= "container-fluid product-container">
  <div class="product-customer-lead-container" >

  <% cache [@product_lead, @product_lead.owner.profile] do %>

    <div class="panel panel-default product-panel" data-behavior="commentable_<%= @product_lead.id %>">

      <div class="panel-heading">
        <div class= "product-header">
          <%= link_to @product do %>
            <%= image_tag @product.product_image_url(:base_thumb) %>
            <h3><%= @product.name %>'s 
          <% end %>
          potential lead case</h3>
        </div>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <div class="product-list">
              <div class="list-name">
                <h4><%= @product_lead.lead %>:</h4>
              </div>
              <div class="description">
                <%= @product_lead.pitch %>
              </div>            
            </div>
          </div>
        </div>
      </div>

    </div>

  <% end %>

    <div class="panel panel-default" id="comment-panel">
      <div class="panel-heading">
        <div class = "row comment-form-row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-12">
                <div class="col-md-12">
                  <%= render partial: 'comments/form', locals: { commentable: @product_lead } %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% if @comments.size > 3 %>
          <div class="row open-all-comments-row" data-behavior="open-all-comments-row">
            <div class="col-md-12">
              <div class="col-md-12">
                <a class="open-all-comments" data-commentableid="<%= @product_lead.id %>" data-behavior="open-all-comments">Show all</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="panel-body">
        <div class = "row">
          <div class="col-md-12" data-behavior="comment-insert-<%= @product_lead.id%>">
            <% cache ['comments-index-lead', @comments.map(&:id), @comments.map(&:updated_at).max, @comments.map{ |comment| comment.user.profile.updated_at }.max] do %>

              <%= render partial: "comments/comment", collection: @comments %>

            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>