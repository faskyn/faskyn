<% provide(:title, @product.name + " lead") %>

<div class= "container-fluid product-container">
  <div class="product-customer-lead-container" >

    <% cache [@product_lead, @product_lead.owner.profile] do %>

      <div class="panel panel-default product-customer-lead-panel" data-behavior="commentable_<%= @product_lead.id %>">

        <div class="panel-heading">
          <%= link_to @product do %>
            <div class= "product-header">
              <%= image_tag @product.product_image_url(:small_thumb) %>
              <h4><%= @product.name %> 
              's target customer case</h4>
            </div>
          <% end %>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <div class="product-customer-list">
                <div class="list-name">
                  <%= link_to_if @product_lead.website, @product_lead.lead, @product_lead.website, html_options = { target: "_blank" }  %>
                </div>
                <div class="description">
                  <%= @product_lead.pitch %>
                </div>            
              </div>
            </div>
          </div>
        </div>

      </div>

    <% end %>

    <%= render partial: "comments/comment_panel", locals: { comments: @comments, commentable: @product_lead } %>

  </div>
</div>