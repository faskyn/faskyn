<% provide(:title, @product.name + " members") %>
<div class= "container-fluid product-container">
  <div class="product-show-container">
    
    <h4>Invite a New Member</h4>
    <%= form_for([@product, ProductInvitation.new]) do |f| %>
      <div class= "row">
        <div class="col-md-6">
          <%= render 'layouts/error_messages', object: f.object %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: "Type an email address..." %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.button "Invite a New Member", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>Sending Invitation..."} %>
          </div>
        </div>
      </div>
    <% end %>

    <h4>Product Members</h4>
    <div class="panel panel-default product-users-panel">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-md-6">Name</th>
            <th class="col-md-3">Role</th>
            <th class="col-md-3">Remove</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "products/product_users/product_user", collection: @product_users, as: :product_user, locals: { product: @product } %>
        </tbody>
      </table>
    </div>

    <h4>Product Member Invitations</h4>
    <div class="panel panel-default product-users-panel">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-md-3">Email</th>
            <th class="col-md-3">Name</th>
            <th class="col-md-3">Status</th>
            <th class="col-md-3">Delete</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "products/product_invitations/product_invitation", collection: @product_invitations, as: :product_invitation, locals: { product: @product } %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<!-- DELETE PRODUCT USER MODAL -->

<div class="modal fade" id="delete-product-user-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="text-align:left">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Remove User from Product Members</h4>
      </div>
      <div class="modal-body">
        <h4>Are you sure?</h4>
        <p> </p>  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="deleteproductuserclose">Close</button>
        <a href="#" type="button" class="btn btn-danger" data-method="delete" data-behavior="delete-product-user-submit" data-productuserdestroylink >Remove User</a>
