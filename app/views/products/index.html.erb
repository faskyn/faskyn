<% provide(:title, 'Products') %>
<div class="container-fluid product-container">
  <% unless has_profile? %>
    <div class="row">
      <div class="well onboard-well">
        <h4>HEY THERE! You can start with discovering the posts, products as well as users and in the meantime don't forget to create your profile:</h4>   <%= link_to "CREATE PROFILE", new_user_profile_path(current_user), class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  <div class="row title-row">
    <div class="col-md-6 title-col">
      <div class="product-desc">
        <h3><i class="fa fa-cubes" style="padding-right:10px;"></i>Products</h3>
      </div>
    </div><!-- SPACE WOULD BREAK INLINE BLOCK
    --><div class="col-md-6 title-col">
      <div class="product-search" style="text-align:right">
        <%= search_form_for @q_products, html: { class: "form-inline"} do |f| %>
          <% f.search_field :name_cont, placeholder: "Search product..", class: 'form-control' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <table class="table">
      <tbody class="product-profile-index new-product-insert">
        <% cache(['products-index', @products.map(&:id), @products.map(&:updated_at).max]) do %>
          <%= render @products %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="infinite-product-scrolling">
    <%= will_paginate @products, param_name: 'products' %>
  </div>
  <div class="no-more">
    <p>No more products.</p>
  </div>
</div>