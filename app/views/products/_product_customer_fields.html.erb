<div class="nested-fields">
  <div class="field">
    <div class= "row">
      <div class="col-md-4">
        <div class = "form-group">
          <%= f.text_field :customer, placeholder: "add a customer", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class = "form-group">
          <%= f.text_area :usage, placeholder: "how the customer uses the product", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <%= link_to_remove_association "Remove customer", f %>
      </div>
    </div>
  </div>
</div>