<div class="nested-fields">
  <div class="field">
    <div class= "row">
      <div class="col-md-5">
        <div class = "form-group">
          <%= f.text_field :customer, placeholder: "company name", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-5">
        <div class = "form-group">
          <%= f.text_field :website, placeholder: "company website", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
        <div class = "form-group">
          <%= f.text_area :usage, placeholder: "how the customer uses the product", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <%= link_to_remove_association "Remove customer", f %>
      </div>
    </div>
  </div>
</div>