<%= form_for([@product_customer, Review.new], remote: true, html: { class: "new-review-form" }) do |f| %>
  <div class="alert alert-danger" style="display:none">
    <ul class="errors" style="display:none">
      <%= render 'layouts/error_messages', object: f.object %>
    </ul>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", placeholder: "Write a review..", data: { behavior: "review-create-body" } %>
  </div>
  <div class="form-group">
    <%= f.button "Create Review", class: 'btn btn-primary', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..." } %>
  </div>
<% end %>