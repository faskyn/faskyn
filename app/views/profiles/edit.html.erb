<% provide(:title, 'Edit profile') %>
<div class="container-fluid container-form">
  <div class= "col-md-8 col-md-offset-2">
  <h3>EDIT YOUR PROFILE</h3>
    <div class="well profile-well">
      <div class="row cta-social-media">
        <div class="col-md-12">
          <p><strong>Connect social media accounts to your profile for better discovering:</strong></p>
        </div>
      </div>
      <div class="row social-media">
        <div class="col-md-6">
          <% if @twitter.blank? %>
            <%= link_to "/auth/twitter", class: "btn btn-social-reg btn-twitter", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Connecting..."} do %>
              <i class="fa fa-twitter"> Twitter</i>
            <% end %>
          <% else %>
            <%= link_to "/auth/twitter", class: "btn btn-social-reg btn-twitter linked", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Connecting..."} do %>
              <i class="fa fa-twitter"> Twitter (linked)</i>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
        <% if @linkedin.blank? %>
          <%= link_to "/auth/linkedin", class: "btn btn-social-reg btn-linkedin", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Connecting..."} do %>
            <i class="fa fa-linkedin"> LinkedIn</i>
          <% end %>
        <% else %>
          <%= link_to "/auth/linkedin", class: "btn btn-social-reg btn-linkedin linked", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Connecting..."} do %>
            <i class="fa fa-linkedin"> LinkedIn (linked)</i>
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="row">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>