<% provide(:title, 'Outgoing tasks') %>
<div class= "container-fluid task-container">
  <div class="row task-header">
    <h3>Outgoing Tasks</h3>
    <span class="rightfloat">
      <a href="#" type="button" class="btn btn-primary newbutton" data-toggle="modal" data-target="#new-task">NEW TASK</a>
      <div class="btn-group" role="group" aria-label="...">
        <%= link_to "Completed Tasks", completed_tasks_user_tasks_path(current_user), class: "btn btn-default", style: "margin-right:0px;border-right:0px;" %>
        <%= link_to "Incoming Tasks", incoming_tasks_user_tasks_path(current_user), class: "btn btn-default" %>
        <%= link_to "All Tasks", user_tasks_path(current_user), class: "btn btn-default" %>
      </div>
    </span>
  </div>
  <div class="panel panel-default">
    <table class="table table-bordered">
      <thead>
        <tr>
          <!-- Sorting implemented w/ ransack gem -->
          <th class="col-md-2"><%= sort_link(@q_outgoing_tasks, :executor_profile_first_name, 'Name / Company') %></th>
          <th class="col-md-7"><%= sort_link(@q_outgoing_tasks, :content, 'Content') %></th>
          <th class="col-md-2"><%= sort_link(@q_outgoing_tasks, :deadline, 'Deadline') %></th>
          <th class="col-md-1"></th>
          <!-- End of ransack sorting-->
        </tr>
      </thead>
      <tbody data-behavior="task-insert">
        <% cache ['outgoing-tasks', @tasks.map(&:id), @tasks.map(&:updated_at).max, @tasks.map{|task| task.assigner.profile.updated_at}.max, @tasks.map{|task| task.executor.profile.updated_at}.max] do %>
          <%= render @tasks || "There are no outgoing tasks at the moment." %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="infinite-task-scrolling">
    <%= will_paginate @tasks %>
  </div>
  <div class="no-more">
    <p>No more tasks.</p>
  </div>
</div>

<%= render "new_task_modal" %>
<%= render 'edit_task_modal' %>
<%= render 'delete_task_modal' %>

