<div class= "container-fluid between-task-container">
  <div class="row task-header">
    <h3>Tasks with <%= @user.first_name %></h3>
    <span class="rightfloat">
      <%= link_to "NEW TASK", new_user_task_path(current_user), type: "button", class: "btn btn-primary newbutton", remote: true, 'data-toggle' => 'modal', 'data-target' => '#newtask' %>
      <%= link_to "Common Medias", common_medias_user_common_medias_path(@user), class: "btn btn-default", id: "rightone"%>
    </span>
  </div>
  <div class="panel panel-default" style="margin:0px;">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="col-md-8">Content</th>
          <th class="col-md-3">Deadline</th>
          <th class="col-md-1"></th>
        </tr>
      </thead>
      <tbody class="new-task-insert-2">
        <% cache(['between-tasks', @tasks.map(&:id), @tasks.map(&:updated_at).max, @tasks.map{|task| task.assigner.profile.updated_at}.max, @tasks.map{|task| task.executor.profile.updated_at}.max]) do %>
          <%= render partial: "tasks/task_between", collection: @tasks, as: :task %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="infinite-task-scrolling" style="text-align:center;display:none">
    <%= will_paginate @tasks %>
  </div>
  <div class="no-more" style="display:none;padding-left:20px;">
    <p>No more tasks.</p>
  </div>
</div>

<!-- EDIT TASK MODAL -->

<div class="modal fade updatetask" id="update-task-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="text-align:left">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Task</h4>
      </div>
      <div class="task-edit-form-insert">
        <!-- UPDATE FORM GETTING RENDERED HERE -->
      </div> 
    </div>
  </div>
</div>

<!-- END OF EDIT TASK MODAL -->

