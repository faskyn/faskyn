<% cache(['index-single-task', task, task.assigner_profile, task.executor_profile]) do %>
  
  <% if current_user.id == task.assigner.id %>
    <tr id="task_<%= task.id %>">
      <td class = "col-md-3 name-cell">
        <div class="row name-row">
          <div class = "col-md-3 sign-column">
              <i class="fa fa-sign-out fa-color fa-style"></i>
          </div>
          <div class = "col-md-9 name-column">
            <%= link_to user_path(id: task.executor.id) do %>
              <div class="table-user-name">
                <%= task.executor.full_name %>
              </div>
              <div class="table-company-name">
                <%= task.executor.company %>
              </div>
            <% end %>
          </div>
        </div>
      </td>
  <% else %>
    <tr id="task_<%= task.id %>">
      <td class = "col-md-3 name-cell">
        <div class="row name-row">
          <div class = "col-md-3 sign-column">
              <i class="fa fa-sign-in fa-style"></i>
          </div>
          <div class = "col-md-9 name-column">
            <%= link_to user_path(id: task.assigner.id) do %>
              <div class="table-user-name">
                <%= task.assigner.full_name %>
              </div>
              <div class="table-company-name">
                <%= task.assigner.company %>
              </div>
            <% end %>
          </div>
        </div>
      </td>
  <% end %>

    <td class="cold-md-6">
      <%= task.content %>
    </td>
    <td class="col-md-2">
      <% if task.completed_at %>
        <%= local_time(task.completed_at, "%d %b %I%p") %>
      <% else %>
        <%= local_time(task.deadline, "%d %b %I%p") %>
      <% end %>
    </td>

    <td class="col-md-1">
      <div class="dropdown dropdown-cell">
        <a data-target="task-change-<%= task.id %>" id="task-change-<%= task.id %>" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <i class="fa fa-ellipsis-v fa-lg fa-styling"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="task-change-<%= task.id %>">
          <li>
          <% if task.completed? %>
            <%= link_to "Uncomplete Task", uncomplete_user_task_path(id: task.id), action: :uncomplete, remote: true, method: :patch %>
          <% else %>
            <%= link_to "Complete Task", complete_user_task_path(id: task.id), action: :complete, remote: true, method: :patch %>
          <% end %>
          </li>
          <li>
            <%= link_to "Edit Task", edit_user_task_path(id: task.id), remote: true, type: "button", 'data-toggle' => "modal", 'data-target' => "#update-task-modal", 'data-task-edit-link' => "#{edit_user_task_path(id: task.id)}", data: { behavior: "open-edit-task-modal" } %>
          </li>
          <li>
            <a href="#" data-toggle="modal" role="button" data-target="#delete-task-modal" data-behavior="open-delete-task-modal" data-task-delete-link="<%= user_task_path(current_user, task) %>">Delete Task</a>
          </li>
        </ul>
      </div>
    </td>  
  </tr>

<% end %>
 