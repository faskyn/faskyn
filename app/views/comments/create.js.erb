<% unless @comment.errors.any? %>
  $("#comment-text-area-<%= @comment.commentable_id%>").val('');
  $('[data-behavior="comment-insert-<%= @comment.commentable_id %>"]').prepend('<%= j render partial: "comments/comment", locals: { comment: @comment } %>');
  $(".best_in_place").best_in_place();
<% end %>