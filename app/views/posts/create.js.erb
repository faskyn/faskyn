$("ul.errors").html("");
<% if @post.errors.any? %>
	$('.alert-danger').show();
	$('ul.errors').show();
	<% @post.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
	<% end %>
<% else %>
	$('ul.errors').hide();
	$('.alert-danger').hide();
	$('[data-behavior="post-insert"]').prepend('<%= j render @post %>');
	collectionPostEditDropdown();
	$('[data-behavior="post-create-body"]').val('');
	$('[data-behavior="img-prev"]').attr('src', "#");
	$('[data-behavior="img-prev"]').addClass('hidden');
	$('[data-behavior="remove-post-preview"]').addClass('hidden');
<% end %>