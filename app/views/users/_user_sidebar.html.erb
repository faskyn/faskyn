<div id = "sidebar-user">
  <div class="list-name">
    <%= link_to users_path do %>
      <h4><i class="fa fa-users" style="padding-right:7px;"></i>Latest users</h4>
    <% end %>
  </div>
  <div class = "list-elements">
    <ol>
      <% cache(['sidebar-profiles-index', @profiles_sidebar.first]) do %>
        <% @profiles_sidebar.each do |profile| %>
          <% cache ['sidebar-profiles-single', profile] do %>
            <%= link_to user_path(profile.user) do %>
              <div class="hover">
                <li>
                  <%= image_tag profile.avatar.url(:small_thumb), class: 'left-sidebar-avatar' %>
                  <span class="element-name">
                    <%= truncate(profile.full_name, length: 25) %>
                  </span>
                  <span class="second-element-name">
                    <%= truncate(profile.company, length:25) %>
                  </span>
                </li>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>