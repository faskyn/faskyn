<tr class="user-index-row" data-link="<%= user_path(user) %>">
  <td class="col-md-6 name">
    <%= image_tag user.profile.avatar.url(:base_thumb), class: "avatar" %>
    <div class="user-fullname">
      <%= user.profile.full_name %>
    </div>
    <span class="company">
      <%= user.profile.job_title %> at <%= user.profile.company %>
    </span>
  </td>
  <td class="col-md-4 description">
    <%= user.profile.description || "-" %>
  </td>
  <td class="col-md-2 location">
    <%= user.profile.location || "-" %>
  </td>
</tr>



