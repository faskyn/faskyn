<% @users.each_slice(4) do |users_for_row| %>
  <div class="row">
    <% users_for_row.each do |user| %>
      <div class="col-md-3" style="padding-left:5px;padding-right:5px;">
        <%= link_to user do %>
          <div class="well user-index-well">
              <div><%= image_tag user.profile.avatar.url(:base_thumb), class: "profile-index-avatar" %></div>
              <h4 style="color:black"><%= user.full_name %></h4>
              <h5><%= user.company %></h5>
              <h5><%= user.job_title %></h5>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>


